<%= render 'navbar' %>
<div class="container-show">
  <div class="new-cocktail">
    <h2>New cocktail</h2>
    <br>
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name, label: false, placeholder: 'Cocktail name' %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: "btn btn-dark btn-block" %>
    <% end %>
  </div>
</div>
